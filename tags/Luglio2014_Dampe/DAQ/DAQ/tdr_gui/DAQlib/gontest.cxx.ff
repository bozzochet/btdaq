#include "MainDaq.hh"
#include "TFile.h"
#include "TH1D.h"

int main(){

MainDaq* mm= new MainDaq();

   TFile f("histos.root","recreate");
   TH1D* h1= new TH1D("alpha","alpha",2000,-100,100);
	
   for (int ii=0;ii<500;ii++){
      mm->Gon->GetPos(1);
      h1->Fill(mm->Gon->ReadAlpha()*1.e6);
    }
  mm->Gon->CloseConnection();
  f.Write();
  f.Close();
return 0;
}
