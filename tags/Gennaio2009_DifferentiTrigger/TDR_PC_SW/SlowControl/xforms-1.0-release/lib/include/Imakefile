forms.h: $(HDRSRC) ../ulib.h
	@/bin/rm -f $@
	@for i in $(HDRSRC); do \
		sed "1,/crop here for forms/d" $$i >> $@; \
	done
	cp forms.h ../forms.h
	@echo created new forms.h

includes::	forms.h

